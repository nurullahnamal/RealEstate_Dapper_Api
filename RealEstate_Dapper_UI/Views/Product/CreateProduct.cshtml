@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni kategori ekleme sayfası</h6>
                <form method="post">
                    <label> Şehir</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <label> İlçe</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <label> Kategori </label>
                    @Html.DropDownListFor(x=>x.categoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                    <label> Fiyat </label>
                    <input type="text" asp-for="title" class="form-control" />

                    <label> Tür</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <label> Kapak Fotoğrafi</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <label> İlan Açık Adresi</label>
                    <textarea asp-for="address" class="form-control" rows="5 "></textarea>
                    <br />
                    <button class="btn btn-primary">Yeni İlanı  Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

