@model UpdateEmployeeDto
@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4"> Personel  Güncelleme sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="EmployeeId" class="form-control" />

                    <label> Personel Adı</label>
                    <input type="text" asp-for="Name" class="form-control" />

                    <label> Personel Ünvanı</label>
                    <input type="text" asp-for="Title" class="form-control" />

                    <label> Personel Mail</label>
                    <input type="text" asp-for="Mail" class="form-control" />

                    <label> Personel Telefonu</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />

                    <label> Personel foto</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <input type="text" asp-for="Status" class="form-control" />

                    <br />
                    <button class="btn btn-primary">Personel Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

